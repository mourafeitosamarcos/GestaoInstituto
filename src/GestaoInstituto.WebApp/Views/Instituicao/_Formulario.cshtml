@model GestaoInstituto.Domain.Entities.Institution


<input id="hdfId" type="hidden" asp-for="Id" />
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-row">
    <div class="form-group col-xl-12 col-lg-12 col-md-12 col-sm-12">
        <h4>Instituição</h4>
        <hr />
    </div>
</div>


<div class="form-row">
    <div class="form-group col-xl-12 col-lg-12 col-md-12 col-sm-12">
        <label asp-for="Nome" class="control-label"></label>
        <input id="txtNome" asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="validatorError"></span>
    </div>

</div>
<div class="form-row">

    <div class="form-group col-xl-12 col-lg-12 col-md-12 col-sm-12">
        <label asp-for="Email" class="control-label"></label>
        <input id="txtEmail" asp-for="Email" class="form-control" autocomplete="off" />
        <span asp-validation-for="Email" class="validatorError"></span>
    </div>

</div>

<div class="form-row">
    <div class="form-group col-xl-4 col-lg-4 col-md-4 col-sm-12">
        <label asp-for="AdministracaoId" class="control-label"></label>
        <select id="ddlAdministracao" asp-for="AdministracaoId" asp-items="ViewBag.Administations" class="form-control"></select>
        <span asp-validation-for="AdministracaoId" class="text-danger"></span>
    </div>
    <div class="form-group col-xl-4 col-lg-4 col-md-4 col-sm-12">
        <label asp-for="Status" class="control-label"></label>
        <select id="ddlStatus" asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<GestaoInstituto.Domain.Enums.StatusUsuario>()">
            <option value="0">Selecione</option>
        </select>
        <span asp-validation-for="Status" class="validatorError"></span>
    </div>
</div>
<div class="form-row">
    <div class="form-group">
        <input id="btnSalvar" type="submit" value="Salvar" class="btn btn-outline-primary" />
        <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
    </div>
</div>